@page
@using Packt.Shared;
@model Clinica.Web.Pages.ServiciosModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
	<h2 class="display-4">Servicios</h2>
	<table class="table">
		<thead class="thead-inverse">
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Descripción</th>
				<th>Costo</th>
				<th>Precio</th>
			</tr>
		</thead>
		<tbody>
			@if(Model.Servicios is not null)
			{
				@foreach(Servicio c in Model.Servicios)
				{
					<tr>
						<td>@c.ServiciosId</td>
						<td>@c.Nombre</td>
						<td>@c.Descripcion</td>
						<td>@c.Costo</td>
						<td>@c.Precio</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>

<div class="row">
	<p></p>
	<form method="post" class="form-control w-50 mx-auto p-2">
		
		<h3 class="text-center">Ingrese los detalles para el nuevo servicio:</h3>
		<div class="container d-flex flex-column mx-auto">
			<br />
			<input asp-for="Servicio.Nombre" placeholder="Nombre Servicio" class="form-control"/>
			<br />
			<textarea asp-for="Servicio.Descripcion" placeholder="Descripción" class="form-control"></textarea>
			<br />
			<input type="number" asp-for="Servicio.Costo" placeholder="Costo" class="form-control"/>
			<br />
			<br />
			<input type="number" asp-for="Servicio.Precio" placeholder="Precio" class="form-control"/>
			<br />
			<br />
			<input class="btn btn-success w-50 mx-auto" type="submit" value="Guardar"/>
		</div>
	</form>
</div>